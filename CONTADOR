public class Contador {

	Integer contador = 0;
    
    public void zerar(){
        contador = 0;
       System.debug(contador);
    }
    
    public void incrementar(){
        contador++;
        System.debug(contador);
    }
    
    public void imprimir(){
        System.debug('Contador: ' + contador);
    }
   }

