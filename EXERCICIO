// QUESTÃO 5

STRING TIPOCOMBUSTIVEL = 'G'; 
INTEGER litros = 25;
Decimal ALCOOL1 = (2.90 * 0.97); 
Decimal ALCOOL2 = (2.90 * 0.95);
Decimal GASOLINA1 = (3.30 * 0.96);
Decimal GASOLINA2 = (3.30 * 0.94); 
      if  (TIPOCOMBUSTIVEL == 'A' && litros < 20){
    system.debug(' Valor a ser pago de Alcool: R$' + (litros - (ALCOOL1)));
}else if (TIPOCOMBUSTIVEL == 'A' && litros >= 20){
    system.debug(' Valor a ser pago de Alcool: R$' + (litros - (ALCOOL2)));
}else if (TIPOCOMBUSTIVEL == 'G' && litros < 20){
   system.debug(' Valor a ser pago de Galosina: R$' + (litros - (GASOLINA1)));
}else if  (TIPOCOMBUSTIVEL == 'G' && litros >= 20){
   system.debug(' Valor a ser pago de Galosina: R$' + (litros - (GASOLINA2)));
} else { 
      }



//QUESTÃO 6 



Decimal N1 =  9;
Decimal N2 =  8;
Decimal N3 =  7;
Decimal Exe1 = 10; 
Decimal Exe2 = 10; 
Decimal Exe3 = 10; 
Decimal Media_dos_exercicios = (Exe1 + Exe2 + Exe3)/3;
Decimal Media_de_aproveitamento = (N1 + N2* 2+ N3* 3 + Media_dos_exercicios)/7;
system.debug('MÉDIA DE APROVEITAMENTO :');
       if  (Media_de_aproveitamento >= 9 ){ 
    system.debug('Você tirou uma nota maior que 9. Foi um A, Parabéns! ' );
      }else if (Media_de_aproveitamento >= 7.5 && Media_de_aproveitamento < 9){ 
    system.debug ('Você tirou uma nota entre 9 a 7,5. Foi um B, Parabéns! ' );
      } else if ( Media_de_aproveitamento >= 6.0 && Media_de_aproveitamento < 7.5){ 
    system.debug ('Você tirou uma nota menor que 7.5 a 6. Foi um C, Parabéns! ' );
      }else if( Media_de_aproveitamento < 6 ){ 
    system.debug ('Você tirou uma nota menor que 6.Foi um D ! ');   
        }else {   
        }



//QUESTÃO 7 



Integer A = 5;
Integer B = 7;
Integer C = 70;
string mens;
if ((A < B + C) && (B < A + C) && (C < A + B)) {
    if ((A == B) && (B == C)) {
        mens = 'Triângulo Equilátero';
    } else {
        if ((A == B) || (B == C) || (A == C)) {
            mens = 'Triângulo Isósceles';
        } else {
            mens = 'Triângulo Escaleno';
        }
    }
} else {
    mens = 'Não é possível formar um triângulo';
}

// OR

Integer A = 5;
Integer B = 5;
Integer C = 5;
if ((A < B + C) && (B < A + C) && (C < A + B)) {
    if ((A == B) && (B == C)) {
        System.debug('Triângulo Equilátero');
    } else {
        if ((A == B) || (B == C) || (A == C)) {
           System.debug ('Triângulo Isósceles');
        } else {
            System.debug ('Triângulo Escaleno');
        }
    }
} else {
   System.debug ('Não é possível formar um triângulo');
} 

