Decimal macaMaior12 = ( macacompra * macamaior) ;    
       if( macacompra <= 11){ 
    system.debug('Cada maça vai sair por R$ 1,30. ' + ' você comprou :' + macacompra + ' maças, é o total da compra é:'+ macaIgualMenor11);
        }else if(macacompra >= 12){
    system.debug('Cada maça vai sair por R$ 1,00' + ' você comprou : '+ macacompra + ' maças, é o total da compra é: ' + macaMaior12);  
        }else{  
 }    



