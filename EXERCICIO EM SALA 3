2 - QUESTÃO CLASSE

public class Pizzaria {

//declara os atributos(caracteríticas), variáveis
//[modificador de acesso] [tipoDeDado] [nomeVariavel];
    
    public void pedir(string pizza){        
        if (pizza == 'Calabresa'){
            System.debug ('A pizza de Clabreza é R$ 45,00');
        }else if ( pizza == '4 Queijos'){ 
                System.debug(' A pizza 4 Queijos é R$ 50,00');
         }else if (pizza == 'Maria Bonita'){
                    System.debug ( 'A pizza Maria Bonita é R$ 60,00');    
        } else {
            System.debug ( 'Chefe, só temos três sabores. Choros, choro, choro.');       
    }
} 
     }

    public void pedir(string pizza){        
        if (pizza == 'Calabresa'){
            System.debug ('A pizza de Clabreza é R$ 45,00');
        }else if ( pizza == '4 Queijos'){ 
                System.debug(' A pizza 4 Queijos é R$ 50,00');
         }else if (pizza == 'Maria Bonita'){
                    System.debug ( 'A pizza Maria Bonita é R$ 60,00');    
        } else {
            System.debug ( 'Chefe, só temos três sabores. Choros, choro, choro.');       
    }
} 
     }

