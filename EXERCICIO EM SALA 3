1 - QUESTÃO CLASSE

Public class Gato {

    public String raca ;
    public Decimal peso;
  
    
  
    public void miar(){
        System.debug(nome + ' MIAAAAAAUUUUUUUUU');
    }    
  
    public void Andar(){
        System.debug(nome + 'está andando');
    }  
    
    public void roronar(){
        System.debug(nome + ' está roronando');
    }
    
   
    public void imprimirGato(){
        System.debug('Nome: ' + nome);
        System.debug('Raça: ' + raca);
        System.debug('Peso:' + peso + ' Kg');
    }
}


