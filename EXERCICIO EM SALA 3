1 - QUESTÃO OBEJETO 

Gato Gatogalatico = new Gato();

Gatogalatico.nome = 'Lilica';
Gatogalatico.raca = 'Marrozinho mesmo';
Gatogalatico.peso = 10;
Gatogalatico.miar ();
Gatogalatico.Andar();
Gatogalatico.roronar ();
Gatogalatico.imprimirGato();




