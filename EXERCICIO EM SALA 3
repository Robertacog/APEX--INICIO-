3 - QUESTÃO CLASSE

public class CalculadoraMagica {

    public integer somar(integer i, integer y){
        return i + y;
    }
    public integer subtrair (integer i, integer y){
       return i - y;
    }
    public integer dividir (integer i, integer y){
       return i / y;
    }
    public integer Multiplicar(integer i, integer y){
       return i * y;
    }
    public integer quadradoDeA(integer i) {
        return i * i; }      
    public integer quadradoDeA(integer y) {
        return y * y;   }   
    public string aMaior(integer i, integer y) {
        if ( i > y) {
            return 'I é maior que Y';
        }else{
            return 'I não é maior que Y'; }
     public integer media(integer i, integer y) {
        return (i + y) / 2;
       }

CalculadoraMagica calculadoraDamagia = new CalculadoraMagica();

System.debug(calculadoraDamagia.somar(22, 22)); 
System.debug(calculadoraDamagia.subtrair(33, 33)); 
System.debug(calculadoraDamagia.dividir(44, 44)); 
System.debug(calculadoraDamagia.multiplicar(55, 55)); 
System.debug(calculadoraDamagia.quadradoDeA(10, 20)); 
System.debug(calculadoraDamagia.quadradoDeB(5, 10)); 
System.debug(calculadoraDamagia.aMaior(5, 20)); 
System.debug(calculadoraDamagia.aMaior(10, 5)); 
System.debug(calculadoraDamagia.media(22, 22)); 

